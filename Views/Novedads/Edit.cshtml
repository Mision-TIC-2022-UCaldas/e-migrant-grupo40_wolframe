@model proyecto.Models.Novedad

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Novedad</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdNovedades" />
            <div class="form-group">
                <label asp-for="Detalle" class="control-label"></label>
                <textarea asp-for="Detalle" class="form-control" cols="15" rows="10">
                </textarea>
                <span asp-validation-for="Detalle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fecha" class="control-label"></label>
                <input asp-for="Fecha" class="form-control" />
                <span asp-validation-for="Fecha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumeroDias" class="control-label"></label>
                <input asp-for="NumeroDias" class="form-control" />
                <span asp-validation-for="NumeroDias" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TipoUsuario" class="control-label"></label>
                <select asp-for="TipoUsuario" class="form-control" >
                 <option>General</option>
                 <option>Entidad</option>
                 <option>Migrante</option>
                </select>
                <span asp-validation-for="TipoUsuario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ciudad" class="control-label"></label>
                <select asp-for="Ciudad" class="form-control" >
                     <option>Bogota</option>
                 <option>Cali</option>
                 <option>Medellin</option>
                 <option>Cartagena</option>
                 <option>Barranquilla</option>
                 <option>Bucaramanga</option>
                 <option>Tunja</option>
                 <option>Manizales</option>
                 <option>Armenia</option>
                </select>
                <span asp-validation-for="Ciudad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

