@model proyecto.Models.servicios

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>servicios</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NombreServicio" class="control-label"></label>
                <select asp-for="NombreServicio" class="form-control">
                 <option>Salud</option>
                 <option>Jurídicos</option>
                 <option>Viveres</option>
                 <option>Comida preparada</option>
                 <option>Empleo</option>
                 <option>Alojamiento temporal</option>
                 <option>Alojamiento Permanente</option>
                 <option>Educación</option>
                 <option>Otros</option>
                </select>
                <span asp-validation-for="NombreServicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumeroPersonas" class="control-label"></label>
                <input asp-for="NumeroPersonas" class="form-control" />
                <span asp-validation-for="NumeroPersonas" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaInico" class="control-label"></label>
                <input asp-for="FechaInico" class="form-control" />
                <span asp-validation-for="FechaInico" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaFinal" class="control-label"></label>
                <input asp-for="FechaFinal" class="form-control" />
                <span asp-validation-for="FechaFinal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Estado" class="control-label"></label>
                <select asp-for="Estado" class="form-control" >
                 <option>Activo</option>
                 <option>Inactivo</option>
                </select>
                <span asp-validation-for="Estado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NitEntidad" class="control-label"></label>
                <select asp-for="NitEntidad" class ="form-control" asp-items="ViewBag.NitEntidad"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

